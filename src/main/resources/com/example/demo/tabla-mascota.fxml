<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.TablaMascotasController" spacing="10" style="-fx-padding: 20;">
    <Label text="LISTADO DE MASCOTAS" style="-fx-font-weight: bold; -fx-font-size: 16;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Buscar:"/>
        <TextField fx:id="txtBuscar" promptText="Escribe nombre de mascota..." style="-fx-pref-width: 300;"/>
    </HBox>

    <TableView fx:id="tablaMascotas" prefHeight="400">
        <columns>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="300"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnVerExpediente" text="Ver Expediente" onAction="#verExpediente"/>
        <Button text="Cerrar" onAction="#cerrarVentana"/>
    </HBox>
</VBox>