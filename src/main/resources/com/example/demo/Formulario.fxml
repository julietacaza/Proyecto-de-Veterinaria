<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo.Formulario">
   <children>
      <Label layoutX="230.0" layoutY="14.0" text="Formulario de Cita" />

      <Label layoutX="33.0" layoutY="63.0" text="Nombre del propietario:" />
      <TextField fx:id="txtPropietario" layoutX="190.0" layoutY="59.0" />

      <Label layoutX="33.0" layoutY="103.0" text="Nombre de la mascota:" />
      <TextField fx:id="txtNomMascota" layoutX="190.0" layoutY="99.0" />

      <Label layoutX="33.0" layoutY="143.0" text="Teléfono de contacto:" />
      <TextField fx:id="txtNumTelefono" layoutX="190.0" layoutY="139.0" />

      <Label layoutX="33.0" layoutY="183.0" text="Tipo de animal:" />
      <ComboBox fx:id="cmbAnimal" layoutX="190.0" layoutY="179.0" promptText="Selecciona animal" />

      <Label layoutX="33.0" layoutY="223.0" text="Servicio requerido:" />
      <ComboBox fx:id="cmbServicio" layoutX="190.0" layoutY="219.0" promptText="Selecciona servicio" />

      <Label layoutX="33.0" layoutY="263.0" text="Fecha:" />
      <ComboBox fx:id="cmbDia" layoutX="190.0" layoutY="259.0" prefWidth="60.0" promptText="Día" />
      <ComboBox fx:id="cmbMes" layoutX="260.0" layoutY="259.0" prefWidth="100.0" promptText="Mes" />
      <ComboBox fx:id="cmbAnio" layoutX="370.0" layoutY="259.0" prefWidth="80.0" promptText="Año" />

      <Label layoutX="33.0" layoutY="303.0" text="Hora:" />
      <ComboBox fx:id="cmbHora" layoutX="190.0" layoutY="299.0" promptText="Selecciona hora" />

      <Button fx:id="btnAceptar" layoutX="150.0" layoutY="420.0" mnemonicParsing="false" onAction="#onBtnAceptarClick" text="Aceptar" />
      <Button fx:id="btnRegresar" layoutX="260.0" layoutY="420.0" mnemonicParsing="false" onAction="#onBtnRegresarClick" text="Regresar" />
      <ComboBox fx:id="cmbMascotasPropietario" layoutX="410.0" layoutY="59.0" prefWidth="150.0" />
   </children>
</AnchorPane>
